<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/standard_margin_2x"
        android:background="@drawable/selector_white">

    <LinearLayout
            android:paddingRight="@dimen/standard_margin_2x"
            android:paddingLeft="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                tools:text="Name Cashier"
                />
        <TextView
                android:layout_marginLeft="@dimen/standard_margin"
                android:id="@+id/tv_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/standard_margin_1x"
                android:paddingRight="@dimen/standard_margin_1x"
                android:layout_gravity="center"
                android:textColor="@color/gray_hard"
                android:textSize="@dimen/body"
                tools:text="date"
                />
    </LinearLayout>
    <LinearLayout
            android:paddingRight="@dimen/standard_margin_2x"
            android:paddingLeft="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/body"
                tools:text="Name Shift"
                />

        <TextView
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_gravity="center"
                android:id="@+id/tv_status"
                android:paddingTop="@dimen/standard_small_margin"
                android:paddingBottom="@dimen/standard_small_margin"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingRight="@dimen/standard_margin_2x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body"
                android:textColor="@color/white"
                android:text="Status"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/rounded_orange_4dp"/>

    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light"/>

</LinearLayout>