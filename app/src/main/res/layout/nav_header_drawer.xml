<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/standard_margin_2x"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom">

    <RelativeLayout
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:layout_marginBottom="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_drawer"
                app:srcCompat="@drawable/ic_drawer"/>
        <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_logout"
                app:srcCompat="@drawable/ic_logout"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <LinearLayout
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <FrameLayout
                android:layout_width="@dimen/profic_size_big"
                android:layout_height="@dimen/profic_size_big"
                android:background="@drawable/circle_gray"
                android:padding="@dimen/standard_small_margin">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_photo"/>
        </FrameLayout>

        <LinearLayout
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Name"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/subheading"
            />
            <TextView
                    android:layout_marginTop="@dimen/standard_xsmall_margin"
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Address"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/body"
            />
            <TextView
                    android:layout_marginTop="@dimen/standard_xsmall_margin"
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store City"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/body"
            />
            <TextView
                    android:layout_marginTop="@dimen/standard_xsmall_margin"
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Phone"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/body"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
