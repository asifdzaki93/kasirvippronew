<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/standard_margin_3x"
            android:paddingRight="@dimen/standard_margin_3x"
            android:paddingBottom="@dimen/standard_margin_2x">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:text="Business Name"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <EditText
                android:id="@+id/et_store"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:text="@string/lbl_currency"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <TextView
                android:id="@+id/et_currency"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:clickable="true"
                android:drawableEnd="@drawable/selector_drawer"
                android:drawableRight="@drawable/selector_drawer"
                android:drawablePadding="@dimen/standard_xsmall_margin"
                android:focusable="true"
                android:gravity="center_vertical"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:text="@string/type_pos"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <TextView
                android:id="@+id/et_typestore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:clickable="true"
                android:drawableEnd="@drawable/selector_drawer"
                android:drawableRight="@drawable/selector_drawer"
                android:drawablePadding="@dimen/standard_xsmall_margin"
                android:focusable="true"
                android:gravity="center_vertical"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:text="Full Name"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:text="@string/lbl_phone"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="16"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:text="@string/lbl_email"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <EditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:text="@string/lbl_address"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@android:color/transparent"
                android:inputType="textPostalAddress"
                android:maxLength="100"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption"/>
            <LinearLayout
                android:layout_marginTop="@dimen/standard_small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:id="@+id/et_password"
                    android:textColorHint="@color/secondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/subheading"/>
                <CheckBox
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:id="@+id/btn_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_password"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_2x"
                android:text="@string/lbl_referal"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <EditText
                android:id="@+id/et_referal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@android:color/transparent"
                android:inputType="textPostalAddress"
                android:maxLength="100"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register"
                android:layout_width="@dimen/standart_button_width"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_margin_4x"
                android:gravity="center"
                android:text="@string/btn_register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/subheading"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin_2x"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account"
                    android:textColor="@color/secondaryText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_small_margin"
                    android:text="Login here"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>