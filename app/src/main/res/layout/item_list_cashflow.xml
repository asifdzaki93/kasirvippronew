<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">






    <LinearLayout
        android:id="@+id/ll_detail"
        android:clickable="true"
        android:background="@drawable/selector_white"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/standard_xsmall_margin"
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body"
            android:textColor="@color/primaryText"/>


        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/standard_xsmall_margin"
            android:id="@+id/tv_method"
            android:paddingTop="@dimen/standard_small_margin"
            android:paddingBottom="@dimen/standard_small_margin"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_caption"
            android:textColor="@color/white"
            android:text="Paid off"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_gravity="right"
            android:id="@+id/tv_total"
            android:paddingTop="@dimen/standard_small_margin"
            android:paddingBottom="@dimen/standard_small_margin"
            android:paddingLeft="@dimen/standard_margin_2x"
            android:paddingRight="@dimen/standard_margin_2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body"
            android:textColor="@color/white"
            android:text="Paid off"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@drawable/rounded_orange_4dp"/>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>