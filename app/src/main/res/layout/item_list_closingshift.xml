<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="64dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin_3x"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin_2x">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:gravity="center"
                    android:text="Closing Shift"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/heading"
                    />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="@string/lbl_detail_datetime"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="Nama Kasir"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_shift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="Shift"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_shift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_stasiun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="station"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="@string/lbl_detail_status"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_flag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="-"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold"/>
            </LinearLayout>


            <View
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/standard_margin_2x">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="Modal Awal"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_cash_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp 0"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:id="@+id/ll_tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="Sales Computer"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_sales_computer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp 0"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:id="@+id/ll_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="sales debit"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_sales_debit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp 0"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:id="@+id/ll_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="sales credit card"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_sales_credit_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold"/>
            </LinearLayout>
            <View
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="PPN"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_ppn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp 0"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold"/>
            </LinearLayout>
            <View
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="Cash Actual"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"/>
                <TextView
                        android:id="@+id/tv_cash_actual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp 0"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/ll_tunai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uang Diterima"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/et_pay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/standart_input_height"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/standard_small_margin"
                        android:background="@drawable/rounded_white_4dp_stroke_gray"
                        android:hint="Rp 0"
                        android:inputType="number"
                        android:maxLength="12"
                        android:padding="@dimen/standard_margin"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/secondaryText"
                        android:textSize="@dimen/body"
                        android:textStyle="bold" />


                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_bayar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="@dimen/standard_margin_1x"
                        android:gravity="center"
                        android:padding="@dimen/standard_margin_2x"
                        android:text="@string/btn_save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/subheading"
                        android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>