<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/divider_light">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:padding="@dimen/standard_margin_2x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body"
                android:id="@+id/tv_header_date"
                android:textColor="@color/primaryText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="@string/lbl_omset_report"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_header_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_small_margin"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:gravity="center"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_small_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="@string/total_sales"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_header_totalsales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_small_margin"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:gravity="center"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_small_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="@string/lbl_total_purchase"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_header_totalpurchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_small_margin"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:gravity="center"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_small_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="@string/lbl_total_spending"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_header_totalspend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_small_margin"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:gravity="center"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_small_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="@string/lbl_total_return"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_header_totalreturn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_small_margin"
                android:layout_weight="2"
                android:background="@drawable/rounded_gray_4dp"
                android:gravity="center"
                android:paddingLeft="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin_2x"
                android:paddingBottom="@dimen/standard_margin"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/body"
                android:textStyle="bold"
                />
        </LinearLayout>



        <LinearLayout
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_small_margin"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/standard_small_margin"
            android:layout_weight="2"
            android:background="@drawable/rounded_gray_4dp"
            android:gravity="center"
            android:paddingLeft="@dimen/standard_margin_2x"
            android:paddingTop="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin_2x"
            android:paddingBottom="@dimen/standard_margin"
            android:text="Chart"
            android:textColor="@color/vermillion"
            android:textSize="@dimen/body"
            android:textStyle="bold"
            />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/standard_margin"
        android:id="@+id/btn_next"
        android:background="@color/gray_hard"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/menu_detail_transaction"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/body"/>
    </LinearLayout>
</LinearLayout>
