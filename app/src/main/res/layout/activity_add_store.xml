<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:paddingLeft="@dimen/standard_margin_3x"
                android:paddingRight="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_4x"
                    android:text="@string/lbl_store_name"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/caption" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:inputType="textPersonName"
                    android:maxLength="64"
                    android:maxLines="1"
                    android:scrollbars="none"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="@dimen/subheading" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:text="@string/lbl_email"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/caption" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:inputType="textEmailAddress"
                    android:maxLength="64"
                    android:maxLines="1"
                    android:scrollbars="none"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="@dimen/subheading" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:text="@string/lbl_phone"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/caption" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:inputType="number"
                    android:maxLength="64"
                    android:maxLines="1"
                    android:scrollbars="none"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="@dimen/subheading" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:text="@string/lbl_address"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/caption" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:background="@android:color/transparent"
                    android:inputType="textPostalAddress"
                    android:maxLength="100"
                    android:scrollbars="vertical"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/subheading" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:text="@string/lbl_currency"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/caption" />

                <TextView
                    android:id="@+id/et_currency"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:clickable="true"
                    android:drawableEnd="@drawable/selector_drawer"
                    android:drawableRight="@drawable/selector_drawer"
                    android:drawablePadding="@dimen/standard_xsmall_margin"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="@dimen/subheading" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginRight="@dimen/standard_margin_2x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/standard_margin_2x">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/standard_margin_2x"
                            android:text="Tax (%)"
                            android:textColor="@color/secondaryText"
                            android:textSize="@dimen/caption" />

                        <EditText
                            android:id="@+id/et_tax"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/standart_input_height"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/standard_small_margin"
                            android:background="@android:color/transparent"
                            android:inputType="numberDecimal"
                            android:maxLength="3"
                            android:gravity="center_vertical"
                            android:scrollbars="vertical"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/subheading"
                            android:hint="0"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/standard_margin_2x"
                            android:text="Service Charge (%)"
                            android:textColor="@color/secondaryText"
                            android:textSize="@dimen/caption" />

                        <EditText
                            android:id="@+id/et_service"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/standart_input_height"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/standard_small_margin"
                            android:background="@android:color/transparent"
                            android:inputType="numberDecimal"
                            android:maxLength="3"
                            android:hint="0"
                            android:gravity="center_vertical"
                            android:scrollbars="vertical"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/subheading" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider" />

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:text="@string/lbl_footer_print"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/caption" />

                <EditText
                    android:id="@+id/et_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:padding="5dp"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="6"
                    android:scrollbars="vertical"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:background="@drawable/rounded_white_4dp_stroke_gray"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/subheading" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="@dimen/standart_button_width"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_margin_4x"
                    android:layout_marginBottom="@dimen/standard_margin_2x"
                    android:gravity="center"
                    android:text="@string/btn_save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheading"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />


    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>