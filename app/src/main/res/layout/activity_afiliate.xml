<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

        <LinearLayout
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_blue"
                android:orientation="vertical"
                android:padding="@dimen/standard_margin_3x">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/ic_internet2"/>


            <TextView
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/lbl_link_tracking_title" />

            <TextView
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/body"
                    android:textColor="@color/white"
                    android:text="@string/lbl_link_tracking_info" />

        </LinearLayout>


         <LinearLayout
                android:id="@+id/ll_online_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/standard_margin_2x">

        <LinearLayout
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_marginRight="@dimen/standard_margin_3x"
                android:layout_marginLeft="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <View
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/standard_margin_3x"
                    android:layout_marginEnd="@dimen/standard_margin_3x"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/secondaryText"
                    android:text="@string/lbl_link_online_store"
                    android:textStyle="bold"/>

            <View
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/standard_margin_3x"
                    android:layout_marginLeft="@dimen/standard_margin_3x"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>

        </LinearLayout>


        <TextView
                android:id="@+id/tv_code"
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin_2x"
                android:paddingLeft="@dimen/standard_margin_6x"
                android:paddingRight="@dimen/standard_margin_6x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XXXXXX"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/heading"
                android:textStyle="bold"
                android:background="@drawable/rounded_white_50dp_stroke_accent"/>

        <LinearLayout
                android:layout_margin="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btn_copy"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/subheading"
                    android:text="@string/btn_copy"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/selector_btn_white_stroke_accent"/>
            <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheading"
                    android:text="@string/btn_share_social"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/selector_btn_accent"/>
        </LinearLayout>

        <TextView
                android:layout_marginRight="@dimen/standard_margin_3x"
                android:layout_marginLeft="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/body"
                android:textColor="@color/secondaryText"
                android:text="@string/note_onlinestore" />


         </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:id="@+id/ll_link_order_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/standard_margin_2x">

            <LinearLayout
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_marginRight="@dimen/standard_margin_3x"
                android:layout_marginLeft="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/standard_margin_3x"
                    android:layout_marginEnd="@dimen/standard_margin_3x"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/secondaryText"
                    android:text="@string/lbl_link_order_screen"
                    android:textStyle="bold"/>

                <View
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/standard_margin_3x"
                    android:layout_marginLeft="@dimen/standard_margin_3x"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_code3"
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin_2x"
                android:paddingLeft="@dimen/standard_margin_6x"
                android:paddingRight="@dimen/standard_margin_6x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XXXXXX"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/heading"
                android:textStyle="bold"
                android:background="@drawable/rounded_white_50dp_stroke_accent"/>

            <LinearLayout
                android:layout_margin="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btn_copy3"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/subheading"
                    android:text="@string/btn_copy"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/selector_btn_white_stroke_accent"/>
                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btn_share3"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheading"
                    android:text="@string/btn_share_social"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/selector_btn_accent"/>
            </LinearLayout>

            <TextView
                android:layout_marginRight="@dimen/standard_margin_3x"
                android:layout_marginLeft="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/body"
                android:textColor="@color/secondaryText"
                android:text="@string/note_order_screen_lbl" />


        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:id="@+id/ll_link_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/standard_margin_2x">

            <LinearLayout
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_marginRight="@dimen/standard_margin_3x"
                android:layout_marginLeft="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/standard_margin_3x"
                    android:layout_marginEnd="@dimen/standard_margin_3x"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/secondaryText"
                    android:text="@string/lbl_link_signup_patient"
                    android:textStyle="bold"/>

                <View
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/standard_margin_3x"
                    android:layout_marginLeft="@dimen/standard_margin_3x"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_code2"
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/standard_margin_2x"
                android:paddingTop="@dimen/standard_margin_2x"
                android:paddingLeft="@dimen/standard_margin_6x"
                android:paddingRight="@dimen/standard_margin_6x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XXXXXX"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/heading"
                android:textStyle="bold"
                android:background="@drawable/rounded_white_50dp_stroke_accent"/>

            <LinearLayout
                android:layout_margin="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btn_copy2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/subheading"
                    android:text="@string/btn_copy"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/selector_btn_white_stroke_accent"/>
                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btn_share2"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheading"
                    android:text="@string/btn_share_social"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/selector_btn_accent"/>
            </LinearLayout>

            <TextView
                android:layout_marginRight="@dimen/standard_margin_3x"
                android:layout_marginLeft="@dimen/standard_margin_3x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/body"
                android:textColor="@color/secondaryText"
                android:text="@string/note_signup_patient" />


        </LinearLayout>



    </LinearLayout>








</ScrollView>
