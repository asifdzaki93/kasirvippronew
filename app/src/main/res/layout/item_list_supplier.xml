<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:orientation="vertical"
        android:paddingTop="@dimen/standard_margin_2x"
        android:background="@drawable/selector_white">

    <LinearLayout
            android:paddingLeft="@dimen/standard_margin_2x"
            android:paddingRight="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <FrameLayout
                android:background="@drawable/circle_primary_light"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/standard_xsmall_margin"
                android:layout_gravity="center_vertical">

            <TextView
                    android:id="@+id/tv_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/subheading"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:text="AT"/>
        </FrameLayout>

        <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/subheading"
                    android:textColor="@color/primaryText"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/body"
                    android:maxLines="1"
                    android:textColor="@color/secondaryText"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/btn_delete"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_trashbin_merah"/>

    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light"/>

</LinearLayout>