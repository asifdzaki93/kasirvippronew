<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/standard_margin_2x"
        android:background="@drawable/selector_white">


    <LinearLayout
            android:paddingLeft="@dimen/standard_margin_2x"
            android:paddingRight="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_photo"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        <TextView
                android:layout_marginLeft="@dimen/standard_margin_2x"
                android:layout_gravity="center"
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="@dimen/subtitle"
                android:textColor="@color/primaryText"
                android:textStyle="bold"/>
        <ImageView
            android:clickable="true"
            android:id="@+id/btn_qr"
            android:layout_marginStart="@dimen/standard_margin_2x"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_qr_codes"
            android:focusable="true"/>

        <ImageView
            android:clickable="true"
            android:id="@+id/btn_edit"
            android:layout_marginStart="@dimen/standard_margin_2x"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edits"
            android:focusable="true"/>

        <ImageView
            android:clickable="true"
            android:id="@+id/btn_delete"
            android:layout_marginLeft="@dimen/standard_margin_2x"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_trashbin_merah"
            android:focusable="true"/>
    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light"/>
</LinearLayout>