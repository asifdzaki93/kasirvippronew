                                android:orientation="horizontal">
                            <TextView
                                    android:layout_marginLeft="@dimen/standard_margin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/subtitle"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:id="@+id/tv_total"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/subtitle"
                                    android:textStyle="bold"
                                    android:gravity="right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_cash"
                            android:padding="@dimen/standard_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bottom_primary_light2_4dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginLeft="@dimen/standard_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cash_nominal"
                                android:textColor="@color/white"
                                android:textSize="@dimen/subtitle"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tv_paynon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/subtitle"
                                android:textStyle="bold"
                                android:gravity="right"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_cashdebt"
                            android:padding="@dimen/standard_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bottom_primary_light2_4dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginLeft="@dimen/standard_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cash_nominal"
                                android:textColor="@color/white"
                                android:textSize="@dimen/subtitle"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tv_paydebt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/subtitle"
                                android:textStyle="bold"
                                android:gravity="right"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/ll_tunai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/standard_margin_2x"
                            android:layout_marginTop="@dimen/standard_margin_2x"
                            android:layout_marginRight="@dimen/standard_margin_2x"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/money_received"
                                android:textColor="@color/primaryText"
                                android:textSize="@dimen/subtitle"
                                android:textStyle="bold" />

                        <EditText
                                android:id="@+id/et_pay"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/standart_input_height"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/standard_small_margin"
                                android:background="@drawable/rounded_white_4dp_stroke_gray"
                                android:hint="0"
                                android:inputType="numberDecimal"
                                android:maxLength="12"
                                android:padding="@dimen/standard_margin"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/secondaryText"
                                android:textSize="@dimen/subtitle"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/tv_kembalian"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/standard_small_margin"
                                android:gravity="right"
                                android:textColor="@color/vermillion"
                                android:textSize="@dimen/caption"
                                android:textStyle="bold"
                                android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_nominal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/standard_margin_2x"
                        android:layout_marginTop="@dimen/standard_margin_1x"
                        android:layout_marginRight="@dimen/standard_margin_2x"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingTop="@dimen/standard_margin_1x"
                            android:id="@+id/rv_list2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />
                    </LinearLayout>



                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_bayar"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_margin="@dimen/standard_margin_2x"
                            android:gravity="center"
                            android:padding="@dimen/standard_margin_2x"
                            android:text="@string/btn_bayar"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/subtitle"
                            android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </FrameLayout>


