                        android:paddingTop="@dimen/standard_margin_2x"
                        android:id="@+id/rv_list"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false" />

                <LinearLayout
