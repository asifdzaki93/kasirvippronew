                                android:focusable="true"
                                android:orientation="horizontal">
                        <TextView
                            android:id="@+id/et_table"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/standart_input_height"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_white_4dp_stroke_gray"
                            android:clickable="true"
                            android:drawableEnd="@drawable/selector_drawer"
                            android:drawableRight="@drawable/selector_drawer"
                            android:drawablePadding="@dimen/standard_margin_1.5x"
                            android:focusable="true"
                            android:padding="@dimen/standard_margin"
                            android:hint="@string/hint_empty_table"
                            android:textColor="@color/primaryText"
                            android:textColorHint="@color/secondaryText"
                            android:textSize="@dimen/subtitle"/>

                        <ImageView
                            android:id="@+id/btn_delete_table"
                            android:layout_width="@dimen/standart_input_height"
                            android:layout_height="@dimen/standart_input_height"
