<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <FrameLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:paddingLeft="@dimen/standard_margin_3x"
                android:paddingRight="@dimen/standard_margin_3x"                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:text="@string/lbl_table_now"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/subtitle" />

            <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:inputType="textPersonName"
                    android:maxLength="64"
                    android:maxLines="1"
                    android:scrollbars="none"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="@dimen/subtitle" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:text="@string/lbl_table_jointo"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/subtitle" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/et_table"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/standart_input_height"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_white_4dp_stroke_gray"
                        android:clickable="true"
                        android:drawableEnd="@drawable/selector_drawer"
                        android:drawableRight="@drawable/selector_drawer"
                        android:drawablePadding="@dimen/standard_xsmall_margin"
                        android:focusable="true"
                        android:padding="@dimen/standard_margin"
                        android:textColor="@color/primaryText"
                        android:textColorHint="@color/secondaryText"
                        android:textSize="@dimen/subtitle"/>
                <ImageView
                        android:id="@+id/btn_delete_table"
                        android:layout_width="@dimen/standart_input_height"
                        android:layout_height="@dimen/standart_input_height"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:background="@drawable/rounded_white_4dp_stroke_gray"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/standard_margin"
                        android:tint="@color/vermillion"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_close"/>
            </LinearLayout>



            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="@dimen/standart_button_width"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_margin_4x"
                    android:layout_marginBottom="@dimen/standard_margin_2x"
                    android:gravity="center"
                    android:text="@string/btn_save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/heading"
                    android:textStyle="bold" />
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>