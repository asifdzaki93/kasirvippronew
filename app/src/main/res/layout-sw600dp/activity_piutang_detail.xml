<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/ReverseAppTheme"
            app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/white"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin_4x"
                    android:padding="@dimen/standard_margin_2x"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:background="@drawable/circle_primary_light"
                        android:padding="@dimen/standard_margin">
                    <TextView
                            android:id="@+id/tv_initial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="26sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            tools:text="AT"/>
                </FrameLayout>
                <LinearLayout
                        android:layout_marginLeft="@dimen/standard_margin_2x"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/subtitle"
                            android:text="Nama"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_marginTop="@dimen/standard_margin"
                            android:id="@+id/tv_phone"
                            android:text="No. Telepon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryText"
                            android:textSize="@dimen/subheading"/>
                    <TextView
                            android:text="Email"
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryText"
                            android:textSize="@dimen/subheading"/>
                    <TextView
                            android:text="Alamat"
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryText"
                            android:textSize="@dimen/subheading"/>
                </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/sw_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/bg_gray">
                    <LinearLayout
                            android:padding="@dimen/standard_margin_2x"
                            android:layout_marginTop="@dimen/standard_margin_2x"
                            android:layout_marginLeft="@dimen/standard_margin_2x"
                            android:layout_marginRight="@dimen/standard_margin_2x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_white_4dp_stroke_gray">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lbl_tagihan"
                                    android:textColor="@color/primaryText"
                                    android:textSize="@dimen/subheading"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lbl_piutang"
                                    android:textColor="@color/secondaryText"
                                    android:textSize="@dimen/body"
                                    android:textStyle="bold"/>
                        </LinearLayout>
                        <TextView
                                android:text="0"
                                android:id="@+id/tv_tagihan"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/standard_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/subheading"
                                android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                            android:padding="@dimen/standard_margin_2x"
                            android:layout_marginTop="@dimen/standard_margin_2x"
                            android:layout_marginLeft="@dimen/standard_margin_2x"
                            android:layout_marginRight="@dimen/standard_margin_2x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_white_4dp_stroke_gray">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/remaining_receivable"
                                    android:textColor="@color/primaryText"
                                    android:textSize="@dimen/subheading"
                                    android:textStyle="bold"/>
                        </LinearLayout>
                        <TextView
                                android:text="0"
                                android:id="@+id/tv_piutang"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/standard_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/subheading"
                                android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="@dimen/standard_margin_2x"
                            android:layout_marginLeft="@dimen/standard_margin_2x"
                            android:layout_marginRight="@dimen/standard_margin_2x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_white_4dp_stroke_gray">
                        <TextView
                                android:padding="@dimen/standard_margin_2x"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_jumlah_yang_dibayarkan"
                                android:textColor="@color/primaryText"
                                android:textSize="@dimen/subheading"
                                android:textStyle="bold"/>
                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"
                        />
                        <LinearLayout
                                android:padding="@dimen/standard_margin_2x"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_bottom_primary_light_4dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lbl_total_yang_dibayarkan"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/subheading"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:id="@+id/tv_total"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/subheading"
                                    android:textStyle="bold"
                            android:gravity="right"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                            android:padding="@dimen/standard_margin_2x"
                            android:layout_marginTop="@dimen/standard_margin_2x"
                            android:layout_marginLeft="@dimen/standard_margin_2x"
                            android:layout_marginRight="@dimen/standard_margin_2x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_white_4dp_stroke_gray">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lbl_hutang_jatuh_tempo"
                                    android:textColor="@color/primaryText"
                                    android:textSize="@dimen/subheading"
                                    android:textStyle="bold"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/tv_jatuh_tempo"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/standard_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/subheading"
                                android:textStyle="bold"
                                android:text="-"
                        />
                    </LinearLayout>
                    <View android:layout_width="match_parent"
                          android:layout_height="80dp"/>
                </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.button.MaterialButton
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/standard_margin"
            android:id="@+id/btn_bayar"
            android:layout_width="@dimen/standart_button_width"
            android:layout_height="56dp"
            android:textColor="@color/white"
            android:textSize="@dimen/subheading"
            android:text="@string/btn_bayar"
            android:textAllCaps="false"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
    />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

