<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:background="@drawable/selector_white">
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
    <LinearLayout
            android:layout_margin="@dimen/standard_margin_2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <FrameLayout
                android:layout_marginRight="@dimen/standard_margin_2x"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_gray">
            <ImageView
                    app:srcCompat="@drawable/ic_cash"
                    android:id="@+id/iv_photo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
        </FrameLayout>

        <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_marginTop="@dimen/standard_xsmall_margin"
                        android:id="@+id/tv_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/subtitle"
                        android:textColor="@color/primaryText"/>

                <TextView
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:id="@+id/tv_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/subheading"
                        android:gravity="right"
                        android:textColor="@color/secondaryText"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_marginRight="@dimen/standard_margin"
                        android:id="@+id/tv_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/subtitle"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/tv_status"
                        android:paddingTop="@dimen/standard_small_margin"
                        android:paddingBottom="@dimen/standard_small_margin"
                        android:paddingLeft="@dimen/standard_margin"
                        android:paddingRight="@dimen/standard_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/subheading"
                        android:textColor="@color/status_credit_text"
                        android:text="Debt"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:background="@drawable/circle_status_credit"/>

                />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
</LinearLayout>